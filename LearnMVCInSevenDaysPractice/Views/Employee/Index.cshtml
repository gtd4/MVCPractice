@model LearnMVCInSevenDaysPractice.ViewModels.EmployeeListViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>MyView</title>
</head>
<body>
    <div>
        <div style="text-align:right">
            Hello, @Model.UserName
            <a href="@Url.Action("Logout", "Authentication")">Logout</a>
        </div>

        <hr />
        Welcome to MVC 5 Step By Step Learning <br />
        <b>Employee Details</b> <br />
        <a href="@Url.Action("AddNew", "Employee")">Add New</a><br />
        <hr />
        @foreach (var item in Model.Employees)
        {
            <div>
                Employee Name: @item.EmployeeFullName<br />


                <span style="background-color: @item.SalaryColor">
                    Employee Salary: @item.Salary;
                </span>
            </div>
            <hr />
        }
    </div>
</body>
</html>
